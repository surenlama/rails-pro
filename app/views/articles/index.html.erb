<h1 class="text-center mt-4">Listing all articles</h1>
<div class="card text-center">
<div class="container">
<% for article in @article %>
    <div class="row  justify-content-md-center" >
        <div class="col-8 mt-4">
       by <%= article.user.username if article.user %>
  <h5 class="card-header">Featured</h5>
  <div class="card-body">
    <h5 class="card-title"><%=  link_to article.title, article_path(article), class: "text-success" %></h5>
    <p class="card-text"><%= truncate(article.description, length: 100) %>.</p>
    <a href="#" class="btn btn-outline-success">View</a>
    <a href="#" class="btn btn-outline-info">Edit</a>
    <a href="#" class="btn btn-outline-danger">Delete</a>

  </div>
  <div class="card-footer text-muted">
  <small> Created <%= time_ago_in_words(article.created_at) %> age,
  edited <%= article.updated_at %> age </small>
  </div>
    </div>
        </div>
        </div>

<% end %>
</div>

<table>
<thead>
<tr>
<th>Title</th>
<th>Description</th>
<th colspan="3">Action</th>

</tr>
</thead>

<tbody>
<% for article in @article %>
<tr>
<td><%=article.title %></td>
<td><%=article.description %></td>
<td><%= link_to 'Show', article_path(article) %></td>
<td><%= link_to 'Edit', edit_article_path(article) %></td>
<td><%= link_to 'Delete', article_path(article),data:{ turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>

</tr>
<% end %>
</tbody>
</table>
<p>
<%= link_to 'Create new article',new_article_path %>
</p>